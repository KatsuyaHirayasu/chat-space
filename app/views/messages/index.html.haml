.chat
  .sidebar
    .chat-user
      %h5 #{@user.name}
      .chat-user__btns
        %a.chat-user__btn
          %i.fa.fa-pencil-square-o
        = link_to edit_user_registration_path, class: "chat-user__btn" , style: "color:white" do
          %i.fa.fa-cog

    .chat-groups
      .chat-group
        .chat-group__name
          %p MDS
        .chat-group__message
          %p awesome
      .chat-group
        .chat-group__name
          %p No Name
        .chat-group__message
          %p まだメッセージはありません
  .chat-main
    .chat-header
      .chat-header__left
        %h2 MDS
        %p Members: Yuta Katahira
      .chat-header__right
        %a Edit
    .chat-body
      .chat-messages
        .chat-message
          .chat-message__user
            %p Yuta Katahira
          .chat-message__time
            %p 2016/12/22 21:15:12
          .chat-message__text
            %p きゃっほー
        .chat-message
          .chat-message__user
            %p Ema Watson
          .chat-message__time
            %p 2016/12/28 15:45:23
          .chat-message__text
            %p where ever you are
    .chat-footer
      %form{ action: "#", method: "post"}
      .chat-footer__body
        %textarea{row: "1", placeholder: "type a message"}
        .chat-footer__file
          %i.fa.fa-image
      %input{type: "submit", value: 'Send'}
